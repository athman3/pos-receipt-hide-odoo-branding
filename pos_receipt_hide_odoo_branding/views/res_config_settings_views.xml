<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_receipt_remove</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']" position="inside">
                <setting string="Hide 'Powered by Odoo'" help="Remove Odoo branding from receipts">
                    <field name="pos_receipt_hide_branding"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
